<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="75dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_layout"
    android:clickable="true"
    android:focusable="true"
    android:padding="30dp">

    <TextView
        android:id="@+id/diary_write_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:typeface="monospace"
        android:textSize="13dp"
        android:text="0000년 00월 00일"/>

    <TextView
        android:id="@+id/diary_location"

        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/diary_write_day"
        app:layout_constraintStart_toStartOf="parent"

        android:typeface="monospace"
        android:textSize="12dp"
        android:text="경기도 성남시 중원구"/>


    <!-- 여기에 이미지 넣기 -->
    <ImageView
        android:id="@+id/diary_Image"
        android:layout_width="270dp"
        android:layout_height="270dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="60dp"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_photo_camera_24"
        android:background="@drawable/circle_white"/>

    <TextView
        android:id="@+id/diary_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        app:layout_constraintTop_toBottomOf="@id/diary_Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="20dp"

        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:typeface="monospace"

        android:gravity="center"
        android:text="제목"/>

    <TextView
        android:id="@+id/diary_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/diary_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textSize="20dp"
        android:typeface="monospace"

        android:text="내용"/>

    <TextView
        android:id="@+id/diary_couple_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:text="+164일째"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/diary_write_day"
        app:layout_constraintBottom_toBottomOf="@id/diary_location"/>







</androidx.constraintlayout.widget.ConstraintLayout>

</layout>